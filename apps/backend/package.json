{
    "name": "@insura-ai/backend",
    "version": "0.1.0",
    "description": "FastAPI backend service for Insura AI",
    "private": true,
    "scripts": {
        "dev": "source .venv/bin/activate && python3 -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
        "start": "source .venv/bin/activate && python3 -m uvicorn app.main:app --host 0.0.0.0 --port 8000",
        "test": "source .venv/bin/activate && pytest",
        "test:cov": "source .venv/bin/activate && pytest --cov=app --cov-report=html",
        "lint": "source .venv/bin/activate && ruff check .",
        "format": "source .venv/bin/activate && black .",
        "type-check": "source .venv/bin/activate && mypy app",
        "clean": "source .venv/bin/activate && rm -rf dist build *.egg-info .pytest_cache htmlcov .coverage"
    }
}