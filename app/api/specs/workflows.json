{
    "openapi": "3.0.3",
    "info": {
        "title": "Workflow API",
        "version": "1.0.0",
        "description": "API for insurance workflow execution and results."
    },
    "paths": {
        "/api/v1/workflows/execute": {
            "post": {
                "summary": "Execute workflow",
                "operationId": "execute_workflow",
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "workflow_name": {
                                        "type": "string"
                                    },
                                    "workflow_definition_id": {
                                        "type": "string",
                                        "format": "uuid"
                                    },
                                    "metadata_json": {
                                        "type": "string"
                                    },
                                    "file1": {
                                        "type": "string",
                                        "format": "binary"
                                    },
                                    "file2": {
                                        "type": "string",
                                        "format": "binary"
                                    }
                                },
                                "required": [
                                    "workflow_name",
                                    "workflow_definition_id",
                                    "file1"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "202": {
                        "description": "Workflow started",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/WorkflowExecutionResponse"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/v1/workflows": {
            "get": {
                "summary": "List workflows",
                "operationId": "list_workflows",
                "responses": {
                    "200": {
                        "description": "List of workflows",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "total": {
                                            "type": "integer"
                                        },
                                        "workflows": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/WorkflowResponse"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "WorkflowExecutionRequest": {
                "type": "object",
                "required": [
                    "workflow_name",
                    "workflow_definition_id"
                ],
                "properties": {
                    "workflow_name": {
                        "type": "string"
                    },
                    "workflow_definition_id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "document_ids": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "format": "uuid"
                        }
                    },
                    "metadata": {
                        "type": "object"
                    }
                }
            },
            "WorkflowExecutionResponse": {
                "type": "object",
                "properties": {
                    "workflow_id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "status": {
                        "type": "string"
                    },
                    "message": {
                        "type": "string"
                    }
                }
            },
            "WorkflowResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "definition_id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "name": {
                        "type": "string"
                    },
                    "key": {
                        "type": "string"
                    },
                    "status": {
                        "type": "string"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            }
        }
    }
}